<div class="container">
    <div class="row d-flex justify-content-center mt-5" style="width: 375px; height: 700px">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card-forms py-3 px-2">
              <div class="division">
                  <div class="row">
                    <div class="col-3">
                      <div class="line l"></div>
                    </div>
                    <div class="col-6"><span>Forgot your password?</span></div>
                    <div class="col-3">
                      <div class="line r"></div>
                    </div>
                  </div>
              </div>
                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class:"myform") do |f| %>
                  <%= f.error_notification %>

                  <div class="form-inputs form-group">
                    <%= f.input :email,
                                required: true,
                                autofocus: true,
                                class: "form-control",
                                input_html: { autocomplete: "email" } %>
                  </div>

                  <div class="form-actions form-group mt-3">
                    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-block btn-primary btn-lg" %>
                  </div>
                    <%= render "devise/shared/links" %>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
