<div class="container">
    <div class="row d-flex justify-content-center mt-5" style="width: 375px; height: 700px">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card-forms py-3 px-2">
              <div class="division">
                  <div class="row">
                    <div class="col-3">
                      <div class="line l"></div>
                    </div>
                    <div class="col-6"><span>Log In</span></div>
                    <div class="col-3">
                      <div class="line r"></div>
                    </div>
                  </div>
              </div>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "myform") do |f| %>
              <div class="form-inputs form-group">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            placeholder: "Email",
                            class: "form-control",
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            class: "form-control",
                            placeholder: "Password",
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-group mt-3 form-actions">
                <%= f.button :submit, "Log In", class: "btn btn-block btn-primary btn-lg" %>
              </div>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
