<div class="container">
  <div class="card" style="width: 375px; ">
    <h2 class= "text font-weight-bold " style="color:#8387F5;">Daily Footprint</h2>
    <canvas id="myChart" width="400" height="400" data-data= "<%= @percent_daily_emissions %>" ></canvas>
    <h6 class="font-weight-bold ml-4">History</h6>
    <div class="card-body shadow-sm rounded-bottom text-dark">
      <% @consumables.each do |consumable| %>
        <div class="row">
          <div class="col-12 ">
            <div class="w-90 mr-1 ml-1 shadow-sm" style="background-color: #F3F3F7; border-radius: 10px;">
                <div class="d-flex justify-content-between align-items-center m-2">
                  <div class="d-flex flex-column  ml-2">
                    <p class="mt-3"><%= consumable.product_name %></p>
                    <p class= "text-muted"><%= consumable.product_brand %>, <%= consumable.serving_size * consumable.number_of_servings %> g</p>
                  </div>
                  <div class="mr-2">
                    <%= link_to consumable_path(consumable),
                        method: :delete,
                        data: { confirm: "Are you sure?" }  do %>
                      <i class="fa fa-2xl fa-minus-circle" style="color: #D2D2E1; backgroung-color: #8387F5; "></i>
                    <% end %>
                  </div>
                </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>
