<div class="container mt-50 mb-50">
  <div>
    <h1 class= "text-white">Search for a Product</h1>
    <%= form_tag products_path, method: :get, class: "d-flex" do %>
      <div class="card">
        <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Search for a product"%>
      </div>
      <div class ="card">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div>
    <% @products.each do |product| %>
      <div class="card card-body">
        <div class="d-inline-flex p-2 media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
          <div class="mr-2 mb-3 mb-lg-0">
            <img src= <%= product["image_front_url"] %> width="150" height="150" alt="">
          </div>
          <div class="media-body">
            <h5 class="media-title font-weight-semibold"><%= product["product_name"]%></h5>
            <ul class="list-inline list-inline-dotted mb-3 mb-lg-2">
              <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true"><%= product["ciqual_food_name_tags"] %></a></li>
              <li class="list-inline-item"><a href="#" class="text-muted" data-abc="true"><%= product["stores"] %></a></li>
            </ul>
          </div>
          <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
            <button type="button" class="btn btn-warning mt-4 text-white"><i class="icon-cart-add mr-2"></i>More Info</button>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
