<div class="container d-flex align-items-center">
  <section class="mx-auto my-5" style="max-width: 23rem;">

    <div class="card">
      <div class="card-body">
        <h3 class="card-title font-weight-bold"><%= @product["product_name"] %></h3>
        <p class="card-text"><%= @product["brands_tags"].first %></p>
        <div class="d-flex justify-content-between">
          <h4 class = "display-2 degree"><%= @product["ecoscore_data"]["agribalyse"]["co2_total"].round(2)%></h4>
          <i class="fas fa-sun-o fa-5x pt-3 text-warning"></i>
        </div>
        <div class="d-flex justify-content-between mt-3 mb-3">
          <h6><i class="fa fa-spinner fa-lg text-info pe-2" ></i> <%= ((@product["ecoscore_data"]["agribalyse"]["co2_total"] / 4.50785714366) * 100).round()%> % FDFE</h6>
          <h6><i class="fas fa-bolt fa-lg text-muted pe-2"></i> <%= (@product["ecoscore_data"]["agribalyse"]["co2_total"] / 0.162).round() %> Days eq.</h6>
        </div>
        <div class="progress" style="height: 5px;">
          <div class="progress-bar bg-black" role="progressbar" style="width: <%= ((@product["ecoscore_data"]["agribalyse"]["co2_total"] / 4.50785714366) * 100).round()%>%;" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <h6 class="card-title font-weight- mt-4"> Life Cycle Analysis</h6>
        <div class="mt-2">
          <%= bar_chart [
                          {
                            name: "kg CO2eq Emissions",
                            data: {
                              "Agriculture" => @product["ecoscore_data"]["agribalyse"]["co2_agriculture"],
                              "Processing" => @product["ecoscore_data"]["agribalyse"]["co2_processing"],
                              "Packaging" => @product["ecoscore_data"]["agribalyse"]["co2_packaging"],
                              "Transportation" => @product["ecoscore_data"]["agribalyse"]["co2_transportation"],
                              "Distribution" => @product["ecoscore_data"]["agribalyse"]["co2_distribution"],
                              "Consumption" => @product["ecoscore_data"]["agribalyse"]["co2_consumption"]
                            }
                          }
                        ] %>
        </div>
      </div>
    </div>
  </section>
</div>
